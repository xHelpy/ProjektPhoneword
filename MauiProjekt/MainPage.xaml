<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiProjekt.MainPage">

    <VerticalStackLayout Spacing="15" Padding="20">
        <Label Text="Enter a Phoneword" FontSize="20">
            
        </Label>
        <Entry x:Name ="PhoneNumberText" Text="1-555-NETMAUI"></Entry>
        <Button x:Name="TranslateButton" Text="Translate" Clicked="onTranslate"></Button>
        <Button x:Name="CallButton" Text="Call" IsEnabled="false" Clicked="onCall"></Button>
    </VerticalStackLayout>
</ContentPage>
